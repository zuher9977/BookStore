@model List<identitiy.Models.UserRolesModel>
@{
    Layout = "~/Views/Shared/LayoutPage.cshtml";

}

@section Body{
    <form method="post">
        <div class="row" style="margin-top:30px;">
            <div class="card col-xs-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h5>@ViewData["Name"]</h5>
                    </div>
                    <div class="panel-body">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="checkbox">
                                <label>
                                    <input type="hidden" asp-for="@Model[i].RoleName" />
                                    <input type="hidden" asp-for="@Model[i].UserId" />
                                    <input type="hidden" asp-for="@Model[i].RoleId" />
                                    <input type="checkbox" asp-for="@Model[i].isSelected" />
                                    <label style="color:black;">@Model[i].RoleName</label>
                                </label>
                            </div>
                        }
                    </div>

                    <div class="panel-footer">
                        <input type="submit" value="Update" class="btn btn-default" asp-action="UpdateUserRole" />
                    </div>
                </div>
            </div>
        </div>
    </form>
}